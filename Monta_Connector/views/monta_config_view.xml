<odoo>
    <record id="view_monta_config_form" model="ir.ui.view">
        <field name="name">monta.config.form</field>
        <field name="model">monta.config</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="endpoint"/>
                    <field name="username"/>
                    <field name="password"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_monta_config_tree" model="ir.ui.view">
        <field name="name">monta.config.tree</field>
        <field name="model">monta.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="endpoint"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_monta_root" name="Monta"/>
    <menuitem id="menu_monta_config" name="Configuration" parent="menu_monta_root"/>
    <act_window id="action_monta_config" name="Monta Configurations"
                res_model="monta.config" view_mode="tree,form"
                menu_id="menu_monta_config"/>
</odoo>
