<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_monta_config_form" model="ir.ui.view">
        <field name="name">monta.config.form</field>
        <field name="model">monta.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="api_key"/>
                        <field name="endpoint"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_monta_config_tree" model="ir.ui.view">
        <field name="name">monta.config.tree</field>
        <field name="model">monta.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="endpoint"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_monta_root" name="Monta Integration"/>
    <menuitem id="menu_monta_config" name="Settings" parent="menu_monta_root"/>
    <act_window id="action_monta_config"
                name="Configuration"
                res_model="monta.config"
                view_mode="tree,form"
                parent="menu_monta_config"/>
</odoo>
